<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">
    <ImageView
        android:layout_width="60dp"
        android:layout_height="70dp"
        android:id="@+id/iv_orders"
        android:src="@drawable/lighthouse"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_orders_menuname"
        android:text="Vada Pav"
        android:textSize="17sp"
        android:textColor="@android:color/background_dark"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/iv_orders"
         />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_orders_quantity"
        android:text="Quantity :-"
        android:textSize="17sp"
        android:textColor="@android:color/background_dark"
        android:layout_below="@id/tv_orders_menuname"
        android:layout_toRightOf="@id/iv_orders"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_orders_quantityvalue"
        android:text="3"
        android:textSize="17sp"
        android:textColor="@android:color/background_dark"
        android:layout_below="@id/tv_orders_menuname"
        android:layout_marginLeft="3dp"
        android:layout_toRightOf="@+id/tv_orders_quantity"
        android:layout_marginTop="5dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_orders_menuprice"
        android:text="20/-"
        android:textSize="17sp"
        android:textColor="@android:color/background_dark"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="7dp"
         />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_orders_totalprice"
        android:text="Total :-"
        android:textSize="17sp"
        android:textColor="@android:color/background_dark"
        android:layout_alignParentRight="true"
        android:layout_below="@id/tv_orders_menuprice"
        android:layout_marginRight="52dp"
        android:layout_marginTop="5dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_orders_totalpricevalue"
        android:text="60/-"
        android:textSize="17sp"
        android:textColor="@android:color/background_dark"
        android:layout_alignParentRight="true"
        android:layout_below="@id/tv_orders_menuprice"
        android:layout_marginRight="7dp"
        android:layout_marginTop="5dp"
        />
</RelativeLayout>