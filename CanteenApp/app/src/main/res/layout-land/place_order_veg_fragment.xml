<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_orange_light">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ImageView
        android:layout_width="700dp"
        android:layout_height="200dp"
        android:id="@+id/iv_menudisplay1"
        android:onClick="OnImage"
        android:src="@drawable/lighthouse"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_menuname1"
        android:layout_below="@id/iv_menudisplay1"
        android:text="Vada Pav"
        android:textSize="19sp"
        android:layout_marginTop="5dp"
        android:textAlignment="center"
        android:textColor="@android:color/background_dark"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_rate1"
        android:text="Rate :-"
        android:textSize="19sp"
        android:textColor="@android:color/background_dark"
        android:layout_below="@+id/iv_menudisplay1"
        android:layout_marginTop="35dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_ratevalue1"
        android:text="50/-"
        android:textSize="19sp"
        android:textColor="@android:color/background_dark"
        android:layout_below="@id/iv_menudisplay1"
        android:layout_marginTop="35dp"
        android:layout_toRightOf="@id/tv_rate1"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_quantity1"
        android:text="Quantity :-"
        android:textSize="19sp"
        android:textColor="@android:color/background_dark"
        android:layout_below="@id/tv_rate1"
        android:layout_marginTop="70dp"
        />
    <NumberPicker
        android:layout_width="wrap_content"
        android:layout_height="140dp"
        android:id="@+id/numberPicker1"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tv_ratevalue1"
        android:layout_marginTop="15dp"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bt_payment1"
        android:text="Place Order"
        android:layout_below="@id/numberPicker1"
        android:background="@android:color/holo_orange_dark"
        />
    </RelativeLayout>
</ScrollView>